<script src="/js/create.js"></script>
<h1>Create a new survey</h1>
<p class="divider1"></p>
<form name="new-survey" action="/create" method="post">
	<input type="text"class="inputs" name="title" placeholder="Title"/> 
<br/>
<button id="add-question" type="button">Add a question</button>
<p class="divider2"></p>
<div class="questions">
  <ol>
	<li class="q">Question:
		<input type="text" name=""> <button class="remove-question" type="button">-</button>
		<p>Choices:&nbsp;&nbsp;<button class="add-choice" type="button">+</button></p>
		<ol class="choices" type="A">
			<li><input type="text" name=""> <button class="remove-choice" type="button">-</button></li>
			<li><input type="text" name=""> <button class="remove-choice" type="button">-</button></li>
			<li><input type="text" name=""> <button class="remove-choice" type="button">-</button></li>
			<li><input type="text" name=""> <button class="remove-choice" type="button">-</button></li>
		</ol>
	</li>
  </ol>	
</div>

	<input class="myButton" type="submit" value="Submit">
</form>

